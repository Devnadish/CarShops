{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/styles/*": ["./styles/*"],
      "@/lib/*": ["./lib/*"],
      "@/provider/*": ["./provider/*"],
      "@/constant/*": ["./constant/*"],
      "@/context/*": ["./context/*"],
      "@/db/*": ["./db/*"],
       "@/app/*": ["./app/*"],
       "@/fonts/*": ["./fonts/*"],
    }
  },
  "exclude": [
    ".git",
    ".app-cache",
    ".npm",
    ".npm-tmp",
    "dist",
    "dist*",
    "node_modules",
    "subfolder/dist",
    "subfolder/node_modules",
    "**/dist/*",
    "**/node_modules/*",
    "build"
  ]
}
